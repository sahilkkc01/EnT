        document.addEventListener('DOMContentLoaded', function() {
          // Get permissions from localStorage
          const permissions = JSON.parse(localStorage.getItem('userPermissions')) || {};
          
          // Generate dynamic menu
          const menuInner = document.querySelector('.menu-inner');
          let menuHtml = '';
        
          // Generate modules
          Object.keys(permissions).forEach(moduleKey => {
            const module = menuConfig[moduleKey];
            if (!module || !permissions[moduleKey].length) return;
        
            menuHtml += `
              <li class="menu-item">
                <a href="javascript:void(0);" class="menu-link menu-toggle">
                  <i class="menu-icon tf-icons bx ${module.icon}"></i>
                  <div class="text-truncate">${module.name}</div>
                </a>
                <ul class="menu-sub">`;
        
            permissions[moduleKey].forEach(subItemKey => {
              const subItem = module.subItems[subItemKey];
              if (subItem) {
                menuHtml += `
                  <li class="menu-item">
                    <a href="${subItem.href}" class="menu-link">
                      <div class="text-truncate">${subItem.name}</div>
                    </a>
                  </li>`;
              }
            });
        
            menuHtml += `</ul></li>`;
          });
        
          // Add Admin dashboard if permitted
          if (permissions.admin?.includes('dashboard')) {
            menuHtml += `
              <li class="menu-header small text-uppercase">
